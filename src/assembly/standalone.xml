<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/wiki</directory>
            <useDefaultExcludes>false</useDefaultExcludes>
            <outputDirectory></outputDirectory>
            <includes>
                <include>FitNesseRoot/.gitattributes</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/wiki</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <outputDirectory></outputDirectory>
            <includes>
                <include>webdrivers/*</include>
            </includes>
            <excludes>
                <exclude>webdrivers/*.version</exclude>
                <exclude>webdrivers/*.exe</exclude>
                <!-- linux webdriver is only included for use by Travis-ci, we don't expect standalone.zip user to run linux -->
                <exclude>webdrivers/*-linux-*</exclude>
            </excludes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/wiki</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <outputDirectory></outputDirectory>
            <excludes>
                <!-- linux webdriver is only included for use by Travis-ci, we don't expect standalone.zip user to run linux -->
                <exclude>webdrivers/*-linux-*</exclude>
                <exclude>target/**</exclude>
                <exclude>copy/**</exclude>
                <exclude>files/**</exclude>
                <exclude>bye.txt</exclude>
                <exclude>greeting.*</exclude>
                <exclude>FitNesseRoot/**/*.zip</exclude>
                <exclude>FitNesseRoot/files/**</exclude>
                <exclude>FitNesseRoot/FitNesse/**</exclude>
                <exclude>FitNesseRoot/PageFooter/**</exclude>
                <exclude>FitNesseRoot/PageHeader/**</exclude>
                <exclude>FitNesseRoot/RecentChanges/**</exclude>
                <exclude>FitNesseRoot/RecentChanges.wiki</exclude>
                <exclude>FitNesseRoot/TemplateLibrary/**</exclude>
                <exclude>FitNesseRoot/properties</exclude>
                <exclude>FitNesseRoot/updateList</exclude>
                <exclude>FitNesseRoot/updateDoNotCopyOverList</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/wiki</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <outputDirectory></outputDirectory>
            <includes>
                <include>FitNesseRoot/files/httpPostExamples/**</include>
                <include>FitNesseRoot/files/galenExamples/**</include>
                <include>FitNesseRoot/files/xmlTestExamples/**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly> 
